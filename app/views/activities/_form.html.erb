<div class="container">
  <div class="row">
    <div class="col-12 col-sm-8 col-md-4">
      <%= simple_form_for @activity do |f| %>
        <%= f.input :title %>
        <%= f.input :details %>
        <%= f.input :address %>
        Categories:
        <%= f.select :category, Activity::CATEGORY %>
        <%= f.input :price %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }%>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
